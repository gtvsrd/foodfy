{% extends "layout.njk" %}

{% block head %}
<title>Foodfy: Receitas</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block header %}
<div class="adminHeader">
{% endblock %}

{% block logo %}
<a href="/"><img src="/assets/logoAdmin.png" alt="Logo da Foodfy"></a>
{% endblock %}

{% block pages %}
    <div class="admin pages">
        <a href="recipes/create">Criar</a>
            
    </div>
{% endblock %}

{% block content %}
    <div class="admin title">
        <h4>Gerenciar receitas</h4>
    </div>
    
    <div class="admin card-container">
        {% for item in items %}
        <div class="card" id="{{ item.id }}">
            <img src="{{ item.picture }}/172x80" alt="{{ item.title }}">
            <div>
                <h4>{{ item.title }}</h4>
                <p>por {{ item.author }}</p>
                <a href="/admin/recipes/{{item.id}}">Visualizar</a>
            </div>
            
        </div>
        {% endfor %}
    </div>
{% endblock %}