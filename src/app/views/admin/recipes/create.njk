{% extends "layout.njk" %}

{% block head %}
<title>Foodfy: Receitas</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block header %}
<div class="adminHeader">
{% endblock %}

{% block logo %}
<a href="/"><img src="/assets/logoAdmin.png" alt="Logo da Foodfy"></a>
{% endblock %}

{% block pages %}
    <div class="admin pages">
        <a href="create">Criar</a>
            
    </div>
{% endblock %}

{% block content %}
<form method="POST" action="/admin/recipes">

    <section class="details">

        <div class="preform">
            <h3>Criando receita</h3>
            <button type="submit">Salvar receita</button>
        </div>
        

        {% include 'admin/recipes/fields.njk' %}

    </section>
</form>

<script src="/add.js"></script>
{% endblock %}